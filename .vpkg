#!/usr/bin/env bash
#
# .vpkg for httpcat
#

name() {
  echo "httpcat"
}

version() {
  echo "0.0.3"
}

repository() {
  echo "https://github.com/jessetane/httpcat"
}

dependencies() {
  echo "argue 0.0.4"
}

fetch() {
  git clone "$(repository)" "$src"
}

update() {
  git fetch --all
  git fetch --tags
}

build() {
  mkdir -p "$lib"/"$build"
  cd "$lib"/"$build"
  cp -R "$src"/.git ./
  git reset --hard "$version"
}
