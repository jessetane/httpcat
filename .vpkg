#!/usr/bin/env bash
#
# .vpkg for httpcat
#

# name() {
#   echo "httpcat"
# }

version() {
  echo "0.0.2"
}

repository() {
  echo "https://github.com/jessetane/httpcat"
}

build() {
  
  # get source
  [ ! -e .git ] && git clone "$(repository)" ./
  
  # update
  git fetch --all
  git fetch --tags
  
  # build
  mkdir -p "$lib"/"$build"
  cd "$lib"/"$build"
  cp -R "$src"/.git ./
  git reset --hard "$version"
}
