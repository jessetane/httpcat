#!/usr/bin/env bash
#
# .vpkg for httpcat
#

url() {
  echo "https://github.com/jessetane/httpcat"
}

version() {
  echo "0.0.2"
}

pre_build() {
  
  # checkout code
  git fetch --all
  git fetch --tags
  
  # install
  mkdir -p "$lib"/"$build"
  cd "$lib"/"$build"
  cp -R "$src"/.git ./
  git reset --hard "$version"
  
  # inform vpkg that we handled the build ourselves
  echo "$lib"/"$build" > "$intercom"
}