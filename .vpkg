#!/usr/bin/env bash
#
# .vpkg for httpcat
#

default_version="0.0.1"

install() {
  cd "$src"
  
  # get repo
  if [ ! -d .git ]
  then
    git clone "https://github.com/jessetane/httpcat" tmp
    mv tmp/.git ./
    rm -rf tmp
  fi
  
  # checkout code
  git fetch --all
  git fetch --tags
  git reset --hard "$source_version"
  
  # install
  cp -R . "$lib"/"$version"
}
